@model QL_Ung_Vien.Models.Requirement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Requirement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="requirementID" />
            <div class="form-group">
                <label asp-for="requirementContent" class="control-label"></label>
                <input asp-for="requirementContent" class="form-control" />
