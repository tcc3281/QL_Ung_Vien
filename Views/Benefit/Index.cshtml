@model IEnumerable<QL_Ung_Vien.Models.Benefit>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.benefitContent)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.benefitContent)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.benefitID" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.benefitID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.benefitID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
