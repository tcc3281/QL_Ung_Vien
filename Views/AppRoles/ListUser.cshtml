@using QL_Ung_Vien.Areas.Identity.Data;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;
@model IPagedList<ApplicationUser>
@{
    ViewData["Title"] = "List Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách tài khoản</h2>
    <div id="UserList">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.First().Id)</th>
                <th>@Html.DisplayNameFor(m=>m.First().firstName)</th>
                <th>@Html.DisplayNameFor(m=>m.First().lastName)</th>
                <th>@Html.DisplayNameFor(m=>m.First().Email)</th>
                <th>@Html.DisplayNameFor(m=>m.First().PhoneNumber)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>item.Id)</td>
                    <td>@Html.DisplayFor(m=>item.firstName)</td>
                    <td>@Html.DisplayFor(m=>item.lastName)</td>
                    <td>@Html.DisplayFor(m=>item.Email)</td>
                    <td>@Html.DisplayFor(m=>item.PhoneNumber)</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0:Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("ListUser", new { page }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
        new PagedListRenderOptions()
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        },
        new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "UserList"
        }))
