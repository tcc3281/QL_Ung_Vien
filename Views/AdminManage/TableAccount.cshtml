@using QL_Ung_Vien.Areas.Identity.Data;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;
@model IPagedList<dynamic>
<table class="table table-striped table-hover" id="@ViewBag.id">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Role
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-route-detail="@item.Id" asp-action="Detail">@item.Id</a></td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.ChucVu</td>
            </tr>
        }
    </tbody>
</table>
<br />
@Html.PagedListPager(Model, page => Url.Action("ListUser", new { page, filter = ViewBag.filter,view = ViewBag.id }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
    new PagedListRenderOptions()
    {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
    },
    new AjaxOptions()
    {
    HttpMethod = "GET",
    UpdateTargetId = "UserList"
    }))